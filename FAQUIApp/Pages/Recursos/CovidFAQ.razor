@page "/covidfaq"
@inject HttpClient Http

    <div class="d-flex justify-content-center">
        <img src="../Image/Covid.jpg" alt="Image" style="width:80%; height:300px" />
    </div>

    <div class="d-flex justify-content-center form-group">
        <h1>Frequently asked Questions on Covid-19</h1>
    </div>

    <div class="d-flex justify-content-center form-group">
        <h2>Martinsito Brito Diaz</h2>
    </div>

    <br />

    @if (questionList == null)
    {
        <p><em>Cargando...</em></p>
    }
    else
    {
        @foreach (var question in questionList)
        {
            <div class="card border-dark">
                <h3 class="card-header text-center">
                    @question.Question
                </h3>
                <div class="card-body">
                    <p class="card-text">@question.Answer</p>
                </div>
            </div>
            <br />
        }
    }

    @code {
        private FAQ[] questionList;

        protected override async Task OnInitializedAsync()
        {
            questionList = await Http.GetFromJsonAsync<FAQ[]>("https://faqfunctionapp20200611160123.azurewebsites.net/api/covidFAQ");
        }

        public class FAQ
        {
            public string Id { get; set; }
            public string Question { get; set; }
            public string Answer { get; set; }
        }
    }
